{{#each errors}}
<div class="container-fluid flashMessage">
  <div class="row justify-content-end">
    <div class="col-2">
      <div class="alert alert-danger" style="width: 100%; text-align : center; margin-bottom : -75px" role="alert">
        {{this}}</div>
    </div>
  </div>
</div>
{{/each}}


{{#each succes}}
<div class="container-fluid flashMessage">
  <div class="row justify-content-end">
    <div class="col-2">
      <div class="alert alert-success" style="width: 100%; text-align : center; margin-bottom : -75px" role="alert">
        {{this}}</div>
    </div>
  </div>
</div>
{{/each}}



<script>
  setTimeout(function() {
      $('.flashMessage').addClass('d-none');
  }, 3000);
</script>