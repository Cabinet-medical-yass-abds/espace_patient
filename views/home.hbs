          <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="" name="prenom">
        </div>
        <hr>
        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Mot de passe</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword2">Confirmation mot de passe</label>
          <input type="password" class="form-control" id="exampleInputPassword2" name="cpass">
