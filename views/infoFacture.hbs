<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <h2>Informations Facture</h2>
            <hr>
            <form class="mt-3" method="post" action="#" id="printJS-form">
            <h5>Docteur</h5>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-8">
                <label for="inputEmail4">Nom et prénom</label>
                <input type="text" class="form-control" id="inputEmail4" readonly value="{{data.id_doctor.nom}} {{data.id_doctor.prenom}}">
                </div>
                <div class="form-group col-md-4">
                <label for="inputPassword4">Téléphone</label>
                <input type="text" class="form-control" id="inputPassword4" readonly value="{{data.id_doctor.numtel}}">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Email</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="" readonly value="{{data.id_doctor.email}}">
            </div>
            <h5>Patient</h5>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-8">
                <label for="inputEmail4">Nom et prénom</label>
                <input type="text" class="form-control" id="inputEmail4" readonly value="{{data.id_patient.nom}} {{data.id_patient.prenom}}">
                </div>
                <div class="form-group col-md-4">
                <label for="inputPassword4">Téléphone</label>
                <input type="text" class="form-control" id="inputPassword4" readonly value="{{data.id_patient.numtel}}">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Email</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="" readonly value="{{data.id_patient.email}}">
            </div>
            <h5>Rendez vous</h5>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-6">
                <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-calendar"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1" readonly value="{{data.id_appointment.date}}">
                </div>
                </div>
                <div class="form-group col-md-6">
                <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-dollar"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1"  readonly value="{{data.id_appointment.prix}}">
                </div>
                </div>
            </div>
            <div class="row">
            <a type="button" href="/dossier/{{data.id_patient.id}}" class="btn btn-outline-primary btn-block">Retour</a>
            <a type="button" class="btn btn-outline-primary  btn-block" id='print' onclick="printJS('printJS-form', 'html')">Imprimer</a>
            </div>
            </form>
        </div>
    </div>
</div>

